<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:background="@drawable/roids_bk2"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="请输入小费金额"
        android:textColor="@color/sbc_snippet_text"
        android:textSize="20sp" />

    <View style="@style/view_header_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@null"
        android:hint="￥"
        android:padding="5dp"
        android:textColor="@color/sbc_snippet_text"
        android:textSize="18sp" />

    <View style="@style/view_header_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/select_btn_bg_style4"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/sbc_snippet_text"
            android:textSize="18sp" />

        <View style="@style/view_line_text" />

        <Button
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/select_btn_bg_style4"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/sbc_snippet_text"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>