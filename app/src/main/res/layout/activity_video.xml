<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="right|center|center_horizontal"
        android:background="@mipmap/top_icon_2"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/video_keyword"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center|center_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/search_hit"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/menu"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/top_icon_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@mipmap/content_k_1"
        android:orientation="horizontal"
        android:padding="15dp">

        <ListView
            android:id="@+id/left_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:divider="@color/transparent"
            android:dividerHeight="1dp"
            android:scrollbars="none" />

        <GridView
            android:id="@+id/right_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:numColumns="6"
            android:scrollbars="none"
            android:verticalSpacing="7dp" />
    </LinearLayout>
</LinearLayout>