<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="910dp"
        android:layout_height="450dp"
        android:background="@mipmap/dialog_bg"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/jishi_icon"
            android:layout_width="280dp"
            android:layout_height="400dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jishi_title_icon" />

            <TextView
                android:id="@+id/jishi_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:paddingLeft="17dp"
                android:singleLine="true"
                android:textColor="@color/menu"
                android:textSize="22sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

                <TextView
                    android:id="@+id/jishi_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/menu"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/jishi_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:textColor="@color/menu"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

                <TextView
                    android:id="@+id/jishi_kg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/menu"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/jishi_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:textColor="@color/menu"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

                <TextView
                    android:id="@+id/jishi_status1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/menu"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/jishi_status2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:textColor="@color/menu"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="17dp"
                android:singleLine="true"
                android:text="@string/jishi_project"
                android:textColor="@color/menu"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/jishi_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="17dp"
                android:singleLine="true"
                android:textColor="@color/menu"
                android:textSize="22sp" />

            <GridView
                android:id="@+id/jishi_project2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="17dp"
                android:singleLine="true"
                android:text="@string/jishi_status1"
                android:textColor="@color/menu"
                android:textSize="22sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

                <Button
                    android:id="@+id/ok"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn"
                    android:text="@string/ok"
                    android:textColor="@drawable/menu_name2"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/cancle"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/btn"
                    android:text="@string/cancle"
                    android:textColor="@drawable/menu_name2"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>