<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="700dp"
    android:layout_height="420dp"
    android:layout_gravity="center"
    android:background="@drawable/roids_bk2"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/jishi_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1.2"
        android:scaleType="fitXY"
        android:src="@mipmap/content_img_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="40dp"
                    android:singleLine="true"
                    android:text="技师详情:"
                    android:textColor="@color/sbc_snippet_text"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号:"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="677"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别:"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="女"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="籍贯:"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="湖北"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重:"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_kg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="65"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:text="身高:"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="178"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状态:"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="空闲"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jishi_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="状态"
                        android:textColor="@color/sbc_snippet_text"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:text="项目:"
                    android:textColor="@color/sbc_snippet_text"
                    android:textSize="20sp" />

                <com.spa.views.MyGridView
                    android:id="@+id/gridview_gvw1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@color/colorAccent"
                    android:numColumns="4"
                    android:padding="10dp"
                    android:verticalSpacing="10dp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ok"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/btn"
                android:text="@string/order"
                android:textColor="@color/sbc_snippet_text"
                android:textSize="22sp" />

            <Button
                android:id="@+id/cancle"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn"
                android:text="@string/cancle"
                android:textColor="@color/sbc_snippet_text"
                android:textSize="22sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>