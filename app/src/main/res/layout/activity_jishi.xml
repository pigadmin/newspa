<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="620dp"
        android:layout_height="40dp"
        android:layout_gravity="right|center_horizontal"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/jishi_sex"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/spin1_llt"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/secector_play_type"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1.5dp"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/spin1_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1.5dp"
                android:src="@mipmap/dbx_1" />
        </LinearLayout>

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/jishi_status"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/spin2_llt"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/secector_play_type"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1.5dp"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/spin2_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="1.5dp"
                android:src="@mipmap/dbx_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/top_icon_2"
            android:gravity="right"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/keyword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center|center_horizontal"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search_jishi"
                android:padding="5dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gainsboro"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@mipmap/top_icon_1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@mipmap/content_k_1"
        android:gravity="center"
        android:orientation="horizontal">

        <ExpandableListView
            android:id="@+id/view_exlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="4.5"
            android:divider="@null"
            android:dividerHeight="-3dp"
            android:padding="15dp"
            android:scrollbars="none" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/content_f" />

        <GridView
            android:id="@+id/right_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:horizontalSpacing="12dp"
            android:numColumns="6"
            android:padding="20dp"
            android:verticalSpacing="12dp" />
    </LinearLayout>
</LinearLayout>